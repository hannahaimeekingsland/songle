<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/fredoka_one_preview"
        android:text="@string/wordsCollected"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/textView5"
        android:paddingTop="50dp"
        />


    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="513dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mapIcon"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#303030"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:drawableTop="@drawable/mapiconsmall" />

        <Button
            android:id="@+id/wordListIcon"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#303030"
            android:paddingTop="5dp"
            android:drawableTop="@drawable/wordlistorange" />

        <Button
            android:id="@+id/settingsIcon"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#303030"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:drawableTop="@drawable/settingswheel" />

    </LinearLayout>

</RelativeLayout>
