<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:background="#cc6618"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/resumeButton" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_weight="1"
        android:background="#cc6618"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/wordLiButton" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button5"
        android:layout_marginTop="33dp"
        android:layout_weight="1"
        android:background="#cc6618"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/getHintButton" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button6"
        android:layout_marginTop="29dp"
        android:background="#cc6618"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/mainMenuButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/fredoka_one"
        android:text="@string/settings"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/closeButton"
        app:srcCompat="@drawable/cross" />

</RelativeLayout>
